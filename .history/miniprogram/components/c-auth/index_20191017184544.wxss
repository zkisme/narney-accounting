button, button::after {
  padding: 0;
  margin: 0;
  background: transparent;
  color: inherit;
  font-size: inherit;
}
.c-auth_mask {
  position: fixed;
  z-index: 1000;
  width: 100vw;
  height: 100vh;
  left: 0;
  top: 0;
  /* display: none; */
}
.c-auth_btn-group{
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
.c-auth_cancel, .c-auth_login {
  text-align: center;
  width: 300rpx;
  padding: 10rpx;
  border-radius: 100rpx;
}
.c-auth_cancel{
  background: var(--primary);
  border: 1rpx solid var(--primary);
}
.c-auth_login {
  background: var(--primary);
  color: #fff;
}