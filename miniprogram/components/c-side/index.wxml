<view class="c-side">
  <view class="c-side_user">
    <image class="c-side_user-img mb20" src="{{avatarUrl || imgHost + '/default-user-img.png'}}" mode="aspectFill" lazy-load="{{true}}" />
    <view wx:if="{{nickName}}" class="c-side_username" bindtap="">
      {{nickName}}
      <text class="iconfont icon-edit"></text>
    </view>
    <buutton wx:else class="c-side_login" bindtap="auth">登录</buutton>
  </view>
</view>