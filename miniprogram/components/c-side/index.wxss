.c-side{
  width: 60vw;
  height: 100%;
  min-height: 100vh;
  background-image: url(http://pz3tx34sh.bkt.clouddn.com/side-bg.jpg);
  background-size: cover;
  background-position: center;
  box-sizing: border-box;
  padding: 60rpx 30rpx;
  text-align: center;
}
.c-side_user{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.c-side_user-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 10rpx 10rpx 5rpx #606060;
  margin-top: 60rpx;
}
.c-side_login {
  border: 1rpx solid var(--danger);
  color: var(--danger);
  padding: 5rpx 40rpx;
  border-radius: 100rpx;
}